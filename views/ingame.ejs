<html>
	<head>
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src = "javascripts/clientSocket.js"></script>
		
	</head>
	<body>
		<% include header %>
		<div id = "messages"></div>
		<div id = "welcome"> Welcome, <%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %> </div>
		<div id = "action_log"></div>
		<div id = "game_start">
		</div>

		<div id = "game">
			<div id = "winner"></div>
			<div id = "turn"></div>
			<div id = "jackpot"></div>
			<div class = "row">
				<a id="check" class = "button round" onclick="check()">Check</button>
				&nbsp;&nbsp;&nbsp;&nbsp;
				<a id="fold" class = "button round" onclick="fold()">Fold</a><br/>
			</div>
			<div class = "row">
				<div class = "small-2 columns">
					<input id="raise_amt" type = "number">
				</div>
				<a id="raise" class = "button round" onclick="raise()">Raise</a><br/>
			</div>
			<div id = "flop"></div>
			Your hand this round: <span id="cards"> </span><br/>
			<div id = "card_imgs"></div>
			Your bet this round: <span id = "bet">0</span><br/> 
			Current max bet: <span id = "max_bet"></span><br/> 
			<br/>
			You have <span id="chips"></span> chips.

			
			<div id = "other_players"></div>
			<script>
		 		var this_user = <%- JSON.stringify(user) %>;
			</script>
		</div>
	</body>

</html>